<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aaa"
    android:layoutDirection="ltr"
    android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="@font/asma"
                android:gravity="center|right"
                android:text="  د.ج"
                android:textColor="#5FB86E"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxStrokeColor="#025E75"
                app:boxStrokeWidth="1.5dp"
                app:boxStrokeWidthFocused="1.5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/prix_parson"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="#025E75"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/asma"
                android:gravity="center|left"
                android:text="المبلغ المستحق دفعه : "
                android:textColor="#025E75"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:gravity="center"
                android:hint="اختر اسم الشخض"
                android:textColorHint="#025E75"
                app:boxStrokeColor="#025E75"
                app:boxStrokeWidth="1.5dp"
                android:fontFamily="@font/asma"

                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="#025E75">

                <AutoCompleteTextView
                    android:id="@+id/nom"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:dropDownWidth="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/cocen"
                    android:gravity="center"
                    android:textColor="#025E75"
                    android:inputType="none"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="DuplicateSpeakableTextCheck,LabelFor" />


            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/asma"
                    android:gravity="center|right"
                    android:text="  د.ج"
                    android:textColor="#5FB86E"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxStrokeColor="#025E75"
                    app:boxStrokeWidth="1.5dp"
                    app:boxStrokeWidthFocused="1.5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/prix_rest"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center|bottom"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="#025E75"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/asma"
                    android:gravity="center|left"
                    android:text="باقي :  "
                    android:textColor="#025E75"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/asma"
                    android:gravity="center"
                    android:text="د.ج"
                    android:textColor="#5FB86E"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxStrokeColor="#025E75"
                    app:boxStrokeWidth="1.5dp"
                    app:boxStrokeWidthFocused="1.5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/prix_ver"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center|bottom"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="#025E75"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/asma"
                    android:gravity="center|left"
                    android:text="دفع :  "
                    android:textColor="#025E75"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/asma"
                    android:gravity="center|right"
                    android:text="  د.ج"
                    android:textColor="#DD2C00"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxStrokeColor="#025E75"
                    app:boxStrokeWidth="1.5dp"
                    app:boxStrokeWidthFocused="1.5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/prix_kridi"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center|bottom"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="#DD2C00"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/asma"
                    android:gravity="center|left"
                    android:text="كريدي مسبق : "
                    android:textColor="#DD2C00"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/asma"
                    android:gravity="center|right"
                    android:text="   ملاحظات :"
                    android:textColor="#025E75"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="#025E75"
                    app:boxStrokeWidth="1.5dp"
                    app:boxStrokeWidthFocused="1.5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/obsarvation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|right"
                        android:fontFamily="@font/cocen"
                        android:textColor="#025E75"
                        android:lines="6"
                        android:lineHeight="28dp"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>




            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_marginBottom="40dp"
            android:paddingRight="10dp"
            android:paddingTop="40dp"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="52dp"

                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:backgroundTint="#96D399"
                android:fontFamily="@font/asma"
                android:text="        حفظ       "
                android:textColor="#067008"
                android:enabled="false"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:elevation="1dp"
                app:rippleColor="#01AC04" />


        </LinearLayout>



</LinearLayout>